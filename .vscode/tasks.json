{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C++ Build and Run",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}\\smath\\smath.cpp",
                "${workspaceFolder}\\smath\\main.cpp",
                "-o",
                "${workspaceFolder}\\smath\\testProgram.exe"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiler: g++",
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "g++",
                    "-g",
                    "${workspaceFolder}\\smath\\smath.cpp",
                    "${workspaceFolder}\\smath\\main.cpp",
                    "-o",
                    "${workspaceFolder}\\smath\\testProgram.exe",
                    "&&",
                    "${workspaceFolder}\\smath\\testProgram.exe"
                ]
            }
        },
        
    ]
}